@model IEnumerable<Suaah.Models.HotelBookingHeader>
@using Suaah.Data
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Hotels";

    var headers = _context.HotelBookingHeader.ToList();
}

<div class="text-center  m-2 mt-5 p-5 h">
    <h1>All Hotel Booking Headers</h1>

</div>
<div class="text-center row">
    <button onclick="filter();" class="btn btn-outline-info my-4">Filter</button>
</div>
<form method="get" asp-action="Index" id="filter" style="display:none;">
 <div class="row m-3">

        <div class="col-5">
            <label class="control-label">Status</label>
            <select name="stat" class="form-control form-select" asp-items="@ViewBag.status">
            </select>
        </div>

        <div class="col-5">
            <label class="control-label">Payment</label>
            <select name="pay" class="form-control form-select" asp-items="@ViewBag.payment">
            </select>
        </div>

        <br /><br />
    </div>
    <div class="row m-3">
        <div class="col-5">
            <label class="control-label">Booking Date {From}</label>

            <input name="bookingfrom" type="date" class="form-control" value="@ViewBag.bookingfrom" />
        </div>

        <div class="col-5">
            <label class="control-label">Booking Date {To}</label>

            <input name="bookingto" type="date" class="form-control" value="@ViewBag.bookingto" />
        </div>
        <br />
        <br />
    </div>
    <div class="row m-3">
        <div class="col-5">
            <label class="control-label">Payment Date {From}</label>

            <input name="paymentfrom" type="date" class="form-control" value="@ViewBag.paymentfrom" />
        </div>

        <div class="col-5">
            <label class="control-label">Payment Date {To}</label>

            <input name="paymentto" type="date" class="form-control" value="@ViewBag.paymentto" />
        </div>

    </div>
    <div class="row m-3">
        <div class="col-12">
            <input type="search" list="id" name="id" value="@ViewData["id"]" placeholder="Header Id" class="p-2" />
            <datalist id="id">
                @foreach (var item in headers)
                {
                    <option>@item.Id</option>
                }
            </datalist>

            <input type="search" list="name" name="name" value="@ViewData["name"]" placeholder="Customer Name" class="p-2" />
            <datalist id="name">
                @foreach (var item in headers)
                {
                    <option>@item.Name</option>
                }
            </datalist>

            <input type="search" list="price" name="price" value="@ViewData["price"]" placeholder="Total Price" class="p-2" />
            <datalist id="price">
                @foreach (var item in headers)
                {
                    <option>@item.TotalPrice</option>
                }
            </datalist>

            <partial name="_Pagination" />
        </div>
    </div>

    <br />

    <div>
        <input type="submit" value="-  Search  -" class="btn btn-outline-danger p-2" style="width:100%" />
    </div>
</form>

<div class="text-center" style="display:none;" id="full">

    <a asp-action="Index" class="btn btn-outline-info my-4">Back to Full List</a>
</div>

<table class="table table-hover table-striped text-center p-3">

    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="id" asp-route-ordersort="@ViewBag.ordersort">
                    Header Id
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="name" asp-route-ordersort="@ViewBag.ordersort">
                    Customer Name
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="bdate" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.BookingDate)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="pdate" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="price" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="stat" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.Status)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-id="@ViewBag.id" asp-route-name="@ViewBag.name" asp-route-price="@ViewBag.price"
                   asp-route-bookingfrom="@ViewBag.bookingfrom" asp-route-bookingto="@ViewBag.bookingto"
                   asp-route-paymentfrom="@ViewBag.paymentfrom" asp-route-paymentto="@ViewBag.paymentto"
                   asp-route-stat="@ViewBag.stat" asp-route-pay="@ViewBag.pay"
                   asp-route-pageNumber="@ViewBag.pageNumber" asp-route-pageSize="@ViewBag.pageSize"
                   asp-route-order="pay" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.Payment)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>

function filter() {
    var form = document.getElementById("filter");
    var btn = document.getElementById("full");
    if (form.getAttribute("style") == "display:none;") {

        form.setAttribute("style", "");
        btn.setAttribute("style", "");

    }

    else { 
     
        form.setAttribute("style", "display:none;");
        btn.setAttribute("style", "display:none;");
    }
}

    </script>
}